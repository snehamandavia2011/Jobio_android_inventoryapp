<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/ViewPadding">

    <TextView
        android:id="@+id/txtHeader"
        style="@style/stySubTitleTile"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_centerInParent="true"
        android:background="@color/transperant"
        android:paddingLeft="@dimen/ViewPadding"
        android:paddingRight="@dimen/ViewPadding"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/listViewDividerHeight"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/txtHeader"
        android:background="@color/white" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/listViewDividerHeight"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/txtHeader"
        android:background="@color/white" />
</RelativeLayout>
